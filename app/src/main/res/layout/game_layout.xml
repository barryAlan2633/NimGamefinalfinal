                    android:background="@drawable/gir">

                </pl.droidsonroids.gif.GifImageButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <pl.droidsonroids.gif.GifImageButton
