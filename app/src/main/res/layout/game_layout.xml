                    android:layout_width="40dp"
                    android:layout_height="55dp"
                    android:background="@drawable/gir" />

                <pl.droidsonroids.gif.GifImageButton
                    android:id="@+id/girRow2_2"
                    android:layout_width="40dp"
                    android:layout_height="55dp"
